[Unit]
Description=django worker that only servers http channels
After=network.target
StopWhenUnneeded=true

[Service]
Type=simple
RuntimeDirectory=django
PIDFile=/run/django/pid%I
User=django
Group=django
WorkingDirectory=/home/django/BepMarketplaceELE/
ExecStart=/usr/bin/python3 manage.py runworker --only-channels=http.*
ExecStop=/bin/kill -s TERM $MAINPID
Restart=always
RestartSec=10

[Install]
WantedBy=httpworker.target
